<%= form_for @movie_review, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :reviewtitle, placeholder: "Review Title" %>
  </div>  
  <div class="field">
    <%= f.collection_select(:genre_id, @genres, :id, :name, :include_blank => "Movie Genre") %>
  </div>
  <div class="field">
    <%= f.text_field :movietitle, placeholder: "Movie Title" %>
  </div>
   <div class="field">
      <%= f.file_field :image %>
  </div>
  <div class="field">
    Review date<%= f.text_field :revieweddate, placeholder: "Date reviewed", :value=>Date.today.strftime('%m-%d-%Y'), :id =>"rev" %>
  </div>
  <div class="field">
    DVD release date<%= f.text_field :dvdreleasedate, placeholder: "DVD release date", :value=>Date.today.strftime('%m-%d-%Y'), :id =>"dvd" %>
  </div>
  <div class="field">
    <%= f.collection_select(:media_id, @mediatypes, :id, :name, :include_blank => "Media Type") %>
  </div>
  <div class="field">
    In theaters? <%= f.check_box :theaterrelease, placeholder: "Compose new movie review..." %>
  </div>
  <div class="field">
    <%= f.text_area :reviewcontent, placeholder: "Compose new movie review..." %>
  </div>
  <div class="field">
    Rating : <%= rating_for @movie_review, "starrating" %>
  </div>
  <%= f.submit "Post Movie Review", class: "btn btn-large btn-primary" %>
<% end %>